                                    <h5 class="card-title">
                                        <%= pergunta.titulo %>
                                    </h5>
                                    <p class="card-text">
                                        <%= pergunta.descricao %>
                                    </p>
                                    <a href="#" class="btn btn-primary">Responder</a>
