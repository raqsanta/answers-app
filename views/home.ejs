<body>

    <%- include('partials/navbar.ejs') %>

        <div class='container'>

            <div class="card border border-primary" style="margin-left: 25%; width: 28rem;">

                <div class="card-header">Formulário de pergunta</div>
                <div class="card-body">

                    <form method='POST' action='/salvarpergunta'>

                        <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Título</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" name='titulo'>
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Descrição</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name='descricao'></textarea>
